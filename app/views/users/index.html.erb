<p id="notice"><%= notice %></p>
<h1>Listing Users</h1>
<br>
<%= link_to 'New User', new_user_path %>
<div id="gridbox" style="width:100%;height:300px;background-color:white;overflow:hidden"></div>
<script>
	var myGrid;
	function doOnLoad(){
		myGrid = new dhtmlXGridObject('gridbox');
		myGrid.setSkin("material");
		myGrid.setImagePath("/skins/material/imgs/");
		myGrid.attachHeader("#text_filter,#text_filter,#text_filter");
		myGrid.setHeader("Id,Name,Created At");
		myGrid.setInitWidths("100,100,*");
		myGrid.setColAlign("left,left,left");
		myGrid.setColTypes("ch,ed,ed");
		myGrid.init();
		myGrid.load("<%= users_list_path%>");
		myGrid.checkAll(false);
	}
	
</script>
